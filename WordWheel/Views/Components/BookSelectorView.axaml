<?xml version="1.0" encoding="UTF-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WordWheel.ViewModels.StudyView"
             x:Class="WordWheel.Views.Components.BookSelectorView"
             x:Name="Root"
             x:DataType="vm:BookSelectorViewModel">
    <Border Background="#CCC1AA"
            CornerRadius="4"
            Padding="8"
            BorderBrush="Black"
            BorderThickness="1"
            Height="190"
            Width="400">
        <Grid RowDefinitions="Auto,*">
            <Button Grid.Row="0"
                    Content="Back"
                    Height="28"
                    FontSize="12"
                    FontWeight="Bold"
                    Background="#E6E6E6"
                    BorderBrush="Black"
                    BorderThickness="1"
                    CornerRadius="4"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Command="{Binding DataContext.CloseCommand, ElementName=Root}" />
            <!-- Books list -->
            <ScrollViewer Grid.Row="1"
                          MaxHeight="135">
                <ItemsControl ItemsSource="{Binding Books}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="4,2">
                                <StackPanel Orientation="Horizontal"
                                            Spacing="10"
                                            VerticalAlignment="Center">
                                    <CheckBox IsChecked="{Binding IsSelected}" />
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Center"
                                               Width="55" />
                                    <Button Content="Lessons"
                                            IsVisible="{Binding IsSelected}"
                                            Width="100"
                                            Height="27"
                                            FontSize="13"
                                            FontWeight="Bold"
                                            Background="#E6E6E6"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding ToggleLessonOverlay}" />
                                    <TextBlock Text="{Binding LessonSummary}"
                                               IsVisible="{Binding IsSelected}"
                                               VerticalAlignment="Center"
                                               FontSize="13" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <!-- Overlay container -->
            <ItemsControl Grid.RowSpan="2"
                          ItemsSource="{Binding Books}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border IsVisible="{Binding IsLessonOverlayVisible}"
                                Background="#CCC1AA"
                                BorderBrush="Black"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch">
                            <StackPanel Spacing="8">
                                <!-- Header row -->
                                <StackPanel Orientation="Horizontal"
                                            Spacing="10">
                                    <Button Content="Back"
                                            Height="28"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Background="#E6E6E6"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding ToggleLessonOverlay}" />
                                    <Button Content="Toggle all"
                                            Height="28"
                                            FontSize="12"
                                            FontWeight="Bold"
                                            Background="#E6E6E6"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            CornerRadius="4"
                                            VerticalAlignment="Center"
                                            HorizontalContentAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Command="{Binding DataContext.ToggleAllLessonsCommand, ElementName=Root}"
                                            CommandParameter="{Binding .}" />
                                    <TextBlock Text="{Binding LessonSummary}"
                                               IsVisible="{Binding IsSelected}"
                                               VerticalAlignment="Center"
                                               FontSize="13" />
                                </StackPanel>
                                <!-- Lesson list -->
                                <ScrollViewer MaxHeight="135"
                                              MinHeight="135"
                                              Margin="4,0">
                                    <ItemsControl ItemsSource="{Binding Lessons}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal"
                                                            Spacing="8"
                                                            Height="26">
                                                    <CheckBox IsChecked="{Binding IsSelected}"
                                                              VerticalAlignment="Center" />
                                                    <TextBlock Text="{Binding Name}"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>